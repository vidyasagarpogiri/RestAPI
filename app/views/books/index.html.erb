<h1>Books#index</h1>
<p>Find me in app/views/books/index.html.erb</p>

<p id="notice"><%= notice %></p>

<h1>Books Index</h1>

<table>
  <thead>
    <tr>
	  <th>ID</th>
      <th>Name</th>
      <th>Marks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
	    <td><%= book.id %></td>
        <td><%= book.title%></td>
        <td><%= book.author %></td>
		<td><%= book.price %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

